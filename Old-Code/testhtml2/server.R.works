
shinyServer(function(input, output) {
    output$test_table <- renderText( {

        str <- "<table border=1>\n"
        for (i in 1:input$n) {
          str <- paste(str, "  <tr>\n", sep = "")
          for (j in 1:input$n) {
            str <- paste(str, "    <td>", i, ":", j, "</td>", sep = "")
          }
        }

        str
    })
})
